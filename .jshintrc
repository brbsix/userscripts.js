{
    // Enforcing
    "curly": true,
    "eqeqeq": true,
    "esversion": 6,
    "forin": true,
    "freeze": true,
    "latedef": "nofunc",
    "nonbsp": true,
    "nonew": true,
    "notypeof": true,
    "singleGroups": true,
    "strict": true,
    "undef": true, 
    "unused": true,
    "varstmt": true,

    // To be deprecated
    "indent": 4,
    "multistr": true,
    "quotmark": "single",

    // Environment
    "browser": true,
    "devel": true,

    // Greasemonkey & Chrome globals
    "globals": {
        "GM_addStyle": true,
        "GM_getValue": true,
        "GM_info": true,
        "GM_log": true,
        "GM_setClipboard": true,
        "GM_setValue": true,
        "GM_xmlhttpRequest": true,
        "unsafeWindow": true,
        "URLSearchParams": true
    }
}
